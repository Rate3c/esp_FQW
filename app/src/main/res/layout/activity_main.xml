<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbarshape"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="@string/connect" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:textSize="30sp"
        android:layout_marginBottom="400dp" />

    <EditText
        android:id="@+id/setAddress"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext1"
        android:gravity="center"
        android:ems="10"
        android:hint="address"
        android:inputType="text"
        android:text="192.168.0.140" />

    <EditText
        android:id="@+id/setPort"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/setAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:ems="10"
        android:hint="port"
        android:inputType="text"
        android:background="@drawable/edittext1"
        android:text="80" />

    <TextView
        android:id="@+id/ipText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-247dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/setAddress"
        android:ems="10"
        android:textSize="20sp"
        android:text="@string/ip" />

    <TextView
        android:id="@+id/portText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setAddress"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/setPort"
        android:ems="10"
        android:textSize="20sp"
        android:text="@string/port" />




</RelativeLayout>